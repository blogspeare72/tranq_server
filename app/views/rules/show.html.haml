- model_class = Rule
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @rule.name
%p
  %strong= model_class.human_attribute_name(:code) + ':'
  %br
  = @rule.code
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @rule.description
%p
  %strong= model_class.human_attribute_name(:sequence) + ':'
  %br
  = @rule.sequence
%p
  %strong= model_class.human_attribute_name(:rule_code) + ':'
  %br
  = @rule.rule_code

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), rules_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_rule_path(@rule), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), rule_path(@rule), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
