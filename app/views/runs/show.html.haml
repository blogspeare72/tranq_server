- model_class = Run
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:status) + ':'
  %br
  = @run.status

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), runs_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_run_path(@run), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), run_path(@run), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
